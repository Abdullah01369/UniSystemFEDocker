@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Academician/Views/Shared/_AcademicianLayout.cshtml";
}
@using ServiceLayer.Models
@model List<ProjectModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Proje Kartları</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        /* Kart ve kart içeriği için ortak stil */
        .project-card {
            transition: transform 0.3s ease-in-out;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            display: flex;
            flex-direction: column;
            height: 100%;
        }

            /* Hover efekti */
            .project-card:hover {
                transform: translateY(-10px);
            }

        /* Proje başlık stili */
        .card-title {
            font-weight: bold;
            font-size: 1.4rem;
        }

        /* Tarih yazısı stili */
        .project-date {
            font-size: 0.9rem;
            color: #6c757d;
            margin-bottom: 10px;
        }

        /* Kartın içerik bölümüne eşit boşluk bırakılması */
        .card-body {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        /* İkonların stil düzenlemesi */
        .project-icons {
            margin-top: 10px;
        }

            .project-icons i {
                margin-right: 10px;
                font-size: 1.2rem;
            }

        /* İncele butonunun görünümü */
        .btn-review {
            background-color: #007bff;
            color: white;
            display: inline-flex;
            align-items: center;
            margin-top: 20px;
        }

            .btn-review i {
                margin-right: 5px;
            }

            .btn-review:hover {
                background-color: #0056b3;
            }

        /* Resimlerin güzel kesilmesi */
        .card-img-top {
            height: 180px;
            object-fit: cover;
        }

        
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="row g-4">

            @if (Model!=null)
            {
                @foreach (var item in Model)
                {
                    <div class="col-md-4">
                        <div class="card project-card">
                            <img src="https://via.placeholder.com/350x180" class="card-img-top" alt="Proje 1 Resim">
                            <div class="card-body d-flex flex-column">
                                <div>
                                    <h5 class="card-title">@item.Name</h5>

                                    <p class="card-text">@item.Declaration</p>
                                </div>
                                <div class="mt-auto">
                                    <div class="project-icons">
                                        <i class="fas fa-code"></i>
                                        <i class="fas fa-database"></i>
                                        <i class="fas fa-chart-bar"></i>
                                    </div>
                                    <a href="/Academician/Research/ProjectDetail/@item.Id" class="btn btn-review mt-3">
                                        <i class="fas fa-search"></i> İncele
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }

            else
            {
                <p class="alert">@ViewBag.Errors</p>
            }

        

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

