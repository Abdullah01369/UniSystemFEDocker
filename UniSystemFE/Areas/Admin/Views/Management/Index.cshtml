@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
 
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
<style>
    body {
        background-color: #f4f6f9;
    }

    .card-hover:hover {
        transform: translateY(-10px);
        transition: transform 0.3s ease;
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
    }

    .dashboard-icon {
        font-size: 3rem;
        color: #007bff;
        margin-bottom: 15px;
    }
</style>
<div class="container">



 
   
   
        <div class="container-fluid p-4">
            <div class="row">
                <div class="col-12 mb-4">
                    <h1 class="display-5 fw-bold text-center text-primary">Üniversite Yönetim Paneli</h1>
                    <p class="text-center text-muted">Hoş Geldiniz, Sistem Yöneticisi</p>
                </div>
            </div>

            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card card-hover shadow-sm">
                        <div class="card-body text-center">
                            <i class="bi bi-people dashboard-icon"></i>
                            <h5 class="card-title">Öğrenci İşlemleri</h5>
                            <p class="card-text text-muted">Öğrenci kayıt ve yönetim</p>
                            <button class="btn btn-primary">İşlemlere Git</button>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card card-hover shadow-sm">
                        <div class="card-body text-center">
                            <i class="bi bi-book dashboard-icon"></i>
                            <h5 class="card-title">Ders Yönetimi</h5>
                            <p class="card-text text-muted">Ders açma ve düzenleme</p>
                            <button class="btn btn-success">İşlemlere Git</button>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card card-hover shadow-sm">
                        <div class="card-body text-center">
                            <i class="bi bi-calendar dashboard-icon"></i>
                            <h5 class="card-title">Akademik Takvim</h5>
                            <p class="card-text text-muted">Dönem planlaması</p>
                            <button class="btn btn-info">Detayları Gör</button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mt-4 g-4">
                <div class="col-md-6">
                    <div class="card shadow-sm">
                        <div class="card-header bg-primary text-white">
                            İstatistikler
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-4 text-center">
                                    <h3 class="text-primary">4.532</h3>
                                    <p class="text-muted">Toplam Öğrenci</p>
                                </div>
                                <div class="col-4 text-center">
                                    <h3 class="text-success">124</h3>
                                    <p class="text-muted">Açık Ders</p>
                                </div>
                                <div class="col-4 text-center">
                                    <h3 class="text-warning">%85.6</h3>
                                    <p class="text-muted">Başarı Oranı</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card shadow-sm">
                        <div class="card-header bg-success text-white">
                            Son İşlemler
                        </div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                Yeni Öğrenci Kaydı
                                <span class="badge bg-primary">5 dakika önce</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                Dönem Dersleri Planlandı
                                <span class="badge bg-success">30 dakika önce</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                Sistem Güncellemesi
                                <span class="badge bg-warning">1 saat önce</span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
 
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

   
         <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
 
 

</div>
