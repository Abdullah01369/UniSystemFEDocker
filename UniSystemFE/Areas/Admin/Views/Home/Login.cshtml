@using ServiceLayer.Models
@model AdminLoginViewModel
@{
    Layout = null;
}


@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
   
    <link href="/css/AdminLogin.css" type="text/css" rel="stylesheet" media="all">

 

    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
</head>
<body>
    <div class="login-container">

        
        <div asp-validation-summary=ModelOnly class="alert alert-danger" role="alert">
        </div>

        <div class="icon">
            <i class="fas fa-user-shield"></i>
        </div>
        <div class="login-logo">
            <img src="~/frontendsource/dist/img/unilogo.png" alt="University Logo">
        </div>
        <div class="login-title">Üniversite Admin Paneli</div>
 
        <form action="/Admin/Home/Login" method="post">
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email </label>
                <input asp-for="Email" class="form-control" id="Email" placeholder="Email girin">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label">Şifre</label>
                <input asp-for="Password" type="password" class="form-control" id="password" placeholder="Şifrenizi girin">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div>
                <h6><a href="/Home/ForgetPassword/">Şifremi unuttum!</a></h6>

            </div>
            <button type="submit" class="btn btn-custom w-100">Giriş Yap</button>
        </form>
        <div class="footer">© 2024 Üniversite Yönetim Sistemi</div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>



