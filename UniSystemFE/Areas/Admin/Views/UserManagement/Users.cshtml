
@{
    ViewData["Title"] = "Users";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>University Admin Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f4f7fc;
            color: #333;
        }

        

        .stat-card {
            background-color: #fff;
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
            transition: transform 0.3s ease;
        }

            .stat-card:hover {
                transform: translateY(-5px);
            }

        .stat-icon {
            font-size: 40px;
            color: #004080;
        }

        .category-card {
            background-color: #fff;
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
        }

            .category-card:hover {
                transform: translateY(-5px);
            }

        .category-header {
            background-color: #004080;
            color: #fff;
            padding: 15px;
            font-weight: bold;
            border-radius: 10px 10px 0 0;
        }

        .category-body {
            padding: 20px;
        }

        .btn-details {
            background-color: #007bff;
            color: white;
            text-transform: uppercase;
            font-weight: bold;
        }

            .btn-details:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
  

    <!-- Dashboard Header -->
    <div class="container mt-4">
        <div class="row g-3">
            <!-- Stat 1 -->
            <div class="col-md-4">
                <div class="stat-card text-center">
                    <div class="stat-icon mb-3"><i class="fas fa-chalkboard-teacher"></i></div>
                    <h5>Öğretim Elemanları</h5>
                    <h2>45</h2>
                </div>
            </div>
            <!-- Stat 2 -->
            <div class="col-md-4">
                <div class="stat-card text-center">
                    <div class="stat-icon mb-3"><i class="fas fa-users"></i></div>
                    <h5>Personeller</h5>
                    <h2>30</h2>
                </div>
            </div>
            <!-- Stat 3 -->
            <div class="col-md-4">
                <div class="stat-card text-center">
                    <div class="stat-icon mb-3"><i class="fas fa-user-graduate"></i></div>
                    <h5>Öğrenciler</h5>
                    <h2>1200</h2>
                </div>
            </div>
        </div>
    </div>
 
    <!-- User Categories -->
    <!-- User Categories -->
    <div class="container mt-5">
        <h3 class="mb-4 text-center fw-bold" style="color: #333;">Kategoriler</h3>
        <div class="row g-4">
            <!-- Öğretim Elemanları -->
            <div class="col-md-4">
                <div class="card text-center shadow border-0" style="border-radius: 15px; background-color: #fdfdfd;">
                    <div class="card-body py-5">
                        <div class="icon-container mb-3" style="font-size: 50px; color: #004080;">
                            <i class="fas fa-chalkboard-teacher"></i>
                        </div>
                        <h5 class="fw-bold mb-3" style="color: #004080;">Öğretim Elemanları</h5>
                        <p class="text-muted">Üniversitenizdeki öğretim elemanlarını yönetmek için buraya tıklayın.</p>
                        <a href="ogretim-elemanlari.html" class="btn btn-primary px-4 mt-3" style="border-radius: 30px;">Detaylı Yönetim</a>
                    </div>
                </div>
            </div>
            <!-- Personeller -->
            <div class="col-md-4">
                <div class="card text-center shadow border-0" style="border-radius: 15px; background-color: #fdfdfd;">
                    <div class="card-body py-5">
                        <div class="icon-container mb-3" style="font-size: 50px; color: #007bff;">
                            <i class="fas fa-users-cog"></i>
                        </div>
                        <h5 class="fw-bold mb-3" style="color: #007bff;">Personeller</h5>
                        <p class="text-muted">İdari personellerinizin bilgilerini düzenlemek ve yönetmek için buraya tıklayın.</p>
                        <a href="personeller.html" class="btn btn-primary px-4 mt-3" style="border-radius: 30px;">Detaylı Yönetim</a>
                    </div>
                </div>
            </div>
            <!-- Öğrenciler -->
            <div class="col-md-4">
                <div class="card text-center shadow border-0" style="border-radius: 15px; background-color: #fdfdfd;">
                    <div class="card-body py-5">
                        <div class="icon-container mb-3" style="font-size: 50px; color: #28a745;">
                            <i class="fas fa-user-graduate"></i>
                        </div>
                        <h5 class="fw-bold mb-3" style="color: #28a745;">Öğrenciler</h5>
                        <p class="text-muted">Kayıtlı öğrencilerin bilgilerini görmek ve yönetmek için buraya tıklayın.</p>
                        <a href="ogrenciler.html" class="btn btn-primary px-4 mt-3" style="border-radius: 30px;">Detaylı Yönetim</a>
                    </div>
                </div>
            </div>
        </div>
    </div>




    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>
</body>
</html>



