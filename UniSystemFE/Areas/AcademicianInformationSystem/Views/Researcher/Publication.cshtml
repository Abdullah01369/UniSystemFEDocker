
@{
    ViewData["Title"] = "Publication";
    Layout = "~/Areas/AcademicianInformationSystem/Views/Shared/_ResearcherInformationLayout.cshtml";
}
 @using SharedLayer.Dtos
 @model List<ResearcherPublication>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

<div class="section">
    <h2 class="section-title">Yayın ve Çalışmalar</h2>

    <div class="publication-network">
        <i class="fas fa-project-diagram"></i>
        <span>Yayınlar</span>
        
     </div>

    <div class="panel">
        <div class="panel-header">
            <h3 class="panel-title">Yayınlar</h3>
            <span class="panel-toggle">−</span>
        </div>
        <div class="panel-content" style="display: block;">

            @if (Model!=null)
            {
                @foreach (var item in Model)
                {
                    <div class="publication">
                        <div class="publication-icon">📄</div>
                        <div class="publication-content">
                            <h4 class="publication-title">@item.Name</h4>
                            <div class="publication-authors">
                                @foreach (var val in item.PublicationMembers)
                                {

                                    <div>
                                        <span class="badge badge-info">@val.Name.ToUpper() @val.Surname.ToUpper() </span>
                                        <span class="badge badge-success"> @val.Universty </span>
                                    </div>
                                   
                                
                                }
                            </div>
                            <div class="publication-journal">@item.PublishedArea</div>
                            <div class="publication-meta">@item.Id</div>
                        </div>
                    </div>
                }
            }
       
          
 
        </div>
    </div>
</div>

