@using ServiceLayer.Models
@model ResetPasswordViewModel



<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            @if (TempData["SuccessData"] != null)
            {
                <div class="alert alert-success" role="alert">
                    @TempData["SuccessData"]
                </div>
            }
            @if (TempData["ErrorData"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @TempData["ErrorData"]
                </div>
            }

            <div asp-validation-summary=ModelOnly class="alert alert-danger" role="alert">
            </div>

            @if (ViewBag.Error == null || ViewBag.Error == "" || Model!=null)
            {

          

                <div class="card shadow-lg p-4">
                    <h3 class="text-center mb-4">Şifreyi Sıfırla</h3>
                    <form method="post">
                        <input type="hidden" name="Email" value="@Model.Email" />
                        <input type="hidden" name="Token" value="@Model.Token" />

                        <div class="form-group mb-3">
                            <label asp-for="NewPassword" class="form-label">Yeni Şifre:</label>
                            <input asp-for="NewPassword" type="password" class="form-control" id="NewPassword" name="NewPassword" placeholder="Yeni şifrenizi girin" required />
                            <span class="text-danger" asp-validation-for="NewPassword"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">Yeni Şifre (Tekrar):</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" id="ConfirmPassword" name="ConfirmPassword" placeholder="Şifreyi tekrar girin" required />
                            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-success btn-block">Şifreyi Sıfırla</button>
                        </div>
                    </form>
                </div>
            }
            else
            {
                <div class="alert alert-danger text-center d-flex align-items-center" role="alert">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-exclamation-triangle me-2" viewBox="0 0 16 16">
                        <path d="M7.938 2.016a.13.13 0 0 1 .125 0l6.857 3.94c.072.041.11.121.102.203l-1.342 9.82a.25.25 0 0 1-.248.221H2.535a.25.25 0 0 1-.248-.221L.944 6.16a.245.245 0 0 1 .102-.203l6.857-3.94Zm.917.493L1.992 6.469 3.24 15h9.52l1.249-8.53L8.854 2.51ZM7.002 11.073a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-2ZM7 6.027a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v3a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-3Z" />
                    </svg>
                    <div>
                        <strong>Hata!</strong> @ViewBag.Error
                    </div>
                </div>
            }
        </div>
    </div>
</div>



