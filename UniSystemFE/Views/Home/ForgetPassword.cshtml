
@{
    ViewData["Title"] = "ForgetPassword";
    
}
 
@model ForgetPasswordViewModel


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Şifremi Unuttum</title>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f8f9fa;
            margin: 0;
        }

        .container {
            max-width: 400px;
            background: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .btn-custom {
            background-color: #ffc107;
            color: black;
        }

            .btn-custom:hover {
                background-color: #e0a800;
            }
    </style>
</head>
<body>

    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }


    <div class="container">
        <h3 class="text-center mb-4">Şifremi Unuttum</h3>


        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }

        <div class="alert alert-info">Şifre yenileme linki, e-posta adresinize gönderilecektir.</div>
        <div asp-validation-summary=ModelOnly class="alert alert-danger" role="alert">
        </div>
        <form method="post">
            <div class="mb-3">
                <label for="Email" asp-for="Email" class="form-label">Email *</label>
                <input  asp-for="Email" class="form-control">
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
            <button type="submit" class="btn btn-custom w-100">Gönder</button>
        </form>
    </div>

</body>
</html>


