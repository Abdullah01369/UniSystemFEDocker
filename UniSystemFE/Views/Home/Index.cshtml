<script>

    function AcademicianLogin() {
        var loginDto = {
            email: $('#AcademicianMail').val(),
            password: $('#AcademicianPassw').val()
        };
        $('#loader').show();

        $.ajax({
            url: '/Home/LoginAcademician',
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(loginDto),
            success: function (response) {
                $('#loader').hide();
                $('#AcademicianBtn').prop('disabled', true);

                if (response.success) {
                    localStorage.setItem('authToken', response.token);
                    window.location.href = '/Academician/Home/Index';
                } else {
                    var errors = response.errors;
                    var errorMessages = errors.join("\n");

                    $('#AcademicianMail').val("");
                    $('#AcademicianPassw').val("");
                    $('#AcademicianBtn').prop('disabled', false);

                    alert(errorMessages);
                }
            },
            error: function (xhr, status, error) {
                $('#loader').hide();
                $('#AcademicianBtn').prop('disabled', false);
                alert("HATA: " + xhr.responseText);
            }
        });
    }
</script>